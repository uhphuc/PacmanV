<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>

<BorderPane
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.example.ui.controllers.GameController"
    style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);"
>
    <!-- Top: Game Stats -->
    <top>
        <VBox spacing="10" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-padding: 15;">
            <HBox spacing="30" alignment="CENTER">
                <VBox spacing="5" alignment="CENTER">
                    <Label text="HP" style="-fx-text-fill: #a8dadc; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Label fx:id="hpLabel" text="3" style="-fx-text-fill: #f1faee; -fx-font-size: 24; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox spacing="5" alignment="CENTER">
                    <Label text="GOLD" style="-fx-text-fill: #a8dadc; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Label fx:id="goldLabel" text="0" style="-fx-text-fill: #ffd166; -fx-font-size: 24; -fx-font-weight: bold;"/>
                </VBox>
                
                <VBox spacing="5" alignment="CENTER">
                    <Label text="LEVEL" style="-fx-text-fill: #a8dadc; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Label fx:id="levelLabel" text="1" style="-fx-text-fill: #f1faee; -fx-font-size: 24; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
            
            <!-- Progress bar for game progress (optional) -->
            <ProgressBar fx:id="progressBar" progress="0.0" prefWidth="400" 
                style="-fx-accent: #4cc9f0; -fx-background-color: rgba(255,255,255,0.1);"/>
        </VBox>
    </top>
    
    <!-- Center: Game Canvas -->
    <center>
        <StackPane>
            <Canvas fx:id="canvas" width="500" height="500" focusTraversable="true"
                style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.5, 0, 0);"/>
            <Rectangle width="502" height="502" fill="transparent" stroke="#4cc9f0" 
                strokeWidth="2" strokeType="OUTSIDE"/>
        </StackPane>
    </center>
    
    <!-- Right: Game Info & Controls -->
    <right>
        <VBox spacing="20" style="-fx-background-color: rgba(0, 0, 0, 0.2); -fx-padding: 20; -fx-border-color: #4cc9f0; -fx-border-width: 0 0 0 2;">
            <Label text="GAME INFO" style="-fx-text-fill: #4cc9f0; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
            
            <!-- Abilities Section -->
            <VBox spacing="10">
                <Label text="ABILITIES" style="-fx-text-fill: #a8dadc; -fx-font-size: 14; -fx-font-weight: bold;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Circle radius="8" fill="#06d6a0"/>
                    <Label fx:id="qLabel" text="Q: Ready" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Circle radius="8" fill="#118ab2"/>
                    <Label fx:id="eLabel" text="E: Ready" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Circle radius="8" fill="#ffd166"/>
                    <Label fx:id="naLabel" text="Special: Ready" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                </HBox>
            </VBox>
            
            <!-- Game Status Section -->
            <VBox spacing="10">
                <Label text="STATUS" style="-fx-text-fill: #a8dadc; -fx-font-size: 14; -fx-font-weight: bold;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Rectangle width="12" height="12" fill="#ef476f" arcWidth="3" arcHeight="3"/>
                    <Label fx:id="monsterLabel" text="Monsters: 0" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                </HBox>
                
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Rectangle width="12" height="12" fill="#9d4edd" arcWidth="3" arcHeight="3"/>
                    <Label fx:id="portalLabel" text="Portal: Locked" style="-fx-text-fill: white; -fx-font-size: 14;"/>
                </HBox>
            </VBox>
            
            <!-- Exit Button -->
            <Button
                fx:id="exitButton"
                text="EXIT GAME"
                onAction="#onExit"
                style="
                    -fx-background-color: linear-gradient(to right, #ef476f, #ff9a5a);
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                    -fx-font-size: 14;
                    -fx-padding: 10 20;
                    -fx-background-radius: 5;
                    -fx-cursor: hand;
                "
                maxWidth="Infinity"
            />
            
            <Label text="Press ESC to pause" style="-fx-text-fill: #a8dadc; -fx-font-size: 11; -fx-font-style: italic; -fx-padding: 10 0 0 0;"/>
        </VBox>
    </right>
    
    <!-- Bottom: Controls Guide (optional) -->
    <bottom>
        <HBox spacing="30" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-padding: 10;">
            <Label text="WASD: Move" style="-fx-text-fill: #a8dadc; -fx-font-size: 12;"/>
            <Label text="Q/E: Abilities" style="-fx-text-fill: #a8dadc; -fx-font-size: 12;"/>
            <Label text="SPACE: Attack" style="-fx-text-fill: #a8dadc; -fx-font-size: 12;"/>
            <Label text="ESC: Menu" style="-fx-text-fill: #a8dadc; -fx-font-size: 12;"/>
        </HBox>
    </bottom>
</BorderPane>
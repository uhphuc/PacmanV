<VBox alignment="CENTER" spacing="25"
      style="-fx-background-color: linear-gradient(to bottom right, #0f0c29, #302b63, #24243e);"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.ui.controllers.MenuController">

    <padding>
        <Insets top="60" right="50" bottom="60" left="50"/>
    </padding>

    <!-- Header vá»›i hiá»‡u á»©ng -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="PacmanV" textFill="linear-gradient(to right, #FFD700, #FFA500)">
            <font>
                <Font name="Impact" size="64"/>
            </font>
            <effect>
                <DropShadow radius="8.0" color="rgba(0,0,0,0.75)" offsetY="4.0"/>
            </effect>
        </Label>
        
        <Rectangle width="300" height="4" fill="linear-gradient(to right, transparent, #FFD700, transparent)"/>
    </VBox>

    <!-- Hiá»ƒn thá»‹ Ä‘iá»ƒm cao vá»›i card style -->

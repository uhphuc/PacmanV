        <Label fx:id="highScoreLabel" text="0" textFill="white" style="-fx-font-size: 28; -fx-font-weight: bold;"/>
    </VBox>

    <!-- Buttons container -->
    <VBox alignment="CENTER" spacing="20">
        <!-- Start Button vá»›i hiá»‡u á»©ng hover -->
        <Button text="START GAME"
                fx:id="startButton"
                onAction="#handleStartGame"
                style="-fx-background-color: linear-gradient(to bottom, #00C853, #00E676); -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-pref-width: 280; -fx-pref-height: 55; -fx-background-radius: 15; -fx-cursor: hand;">
            <effect>
                <DropShadow radius="5.0" color="rgba(0,200,83,0.5)" offsetY="3.0"/>
            </effect>
        </Button>
        
        <!-- Score Button vá»›i hiá»‡u á»©ng hover -->
        <Button text="SCORE BOARD"
                fx:id="scoreButton"
                onAction="#handleShowScores"
                style="-fx-background-color: linear-gradient(to bottom, #2979FF, #00B0FF); -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-pref-width: 280; -fx-pref-height: 55; -fx-background-radius: 15; -fx-cursor: hand;">
            <effect>
                <DropShadow radius="5.0" color="rgba(41,121,255,0.5)" offsetY="3.0"/>
            </effect>
        </Button>
    </VBox>

    <!-- Instructions Panel -->
    <VBox alignment="CENTER_LEFT" spacing="12"
          style="-fx-background-color: rgba(255,255,255,0.08); -fx-background-radius: 12; -fx-padding: 20; -fx-border-color: rgba(187,222,251,0.3); -fx-border-radius: 12; -fx-border-width: 1;">
        <Label text="ðŸŽ® CONTROLS" textFill="#64B5F6" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        
        <HBox spacing="20">
            <VBox spacing="8">
                <Label text="MOVEMENT" textFill="#BBDEFB" style="-fx-font-size: 14;"/>
                <Label text="WASD / Arrow Keys" textFill="white" style="-fx-font-size: 14;"/>
            </VBox>
            <VBox spacing="8">
                <Label text="SKILLS" textFill="#BBDEFB" style="-fx-font-size: 14;"/>

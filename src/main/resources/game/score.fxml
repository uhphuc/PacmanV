<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>

<VBox spacing="20"
      alignment="CENTER"
      style="-fx-background-color: #1a1a2e;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.ui.controllers.ScoreController">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Header -->
    <VBox alignment="CENTER" spacing="15">
        <Label text="ðŸ† LEADERBOARD"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;">
            <font>
                <Font name="Arial Black" size="36"/>
            </font>
            <effect>
                <DropShadow radius="8" color="#000000" offsetY="4"/>
            </effect>
        </Label>

        <!-- Divider -->
        <Rectangle width="400" height="3" fill="#FFD700"/>

        <Label text="Top Performers"
               style="-fx-text-fill: #888888; -fx-font-size: 14px; -fx-font-style: italic;"/>
    </VBox>

    <!-- Score Cards Container -->
    <VBox fx:id="cardsContainer" spacing="10" alignment="CENTER"
          style="-fx-background-color: rgba(0,0,0,0.2); -fx-background-radius: 15; -fx-padding: 20; -fx-border-color: #333333; -fx-border-radius: 15; -fx-border-width: 2;"/>

    <!-- Stats Bar -->
    <HBox spacing="25" alignment="CENTER"
          style="-fx-background-color: #0f3460; -fx-background-radius: 10; -fx-padding: 15;">

        <VBox alignment="CENTER" spacing="5">
            <Label text="HIGHEST" style="-fx-text-fill: #FFD700; -fx-font-size: 12px;"/>
            <Label fx:id="highestLabel" text="0"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        </VBox>

        <Separator orientation="VERTICAL" prefHeight="40">
            <style>-fx-background-color: #444444;</style>
        </Separator>

        <VBox alignment="CENTER" spacing="5">
            <Label text="TOTAL GAMES" style="-fx-text-fill: #4FC3F7; -fx-font-size: 12px;"/>
            <Label fx:id="totalGamesLabel" text="0"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        </VBox>

        <Separator orientation="VERTICAL" prefHeight="40">
            <style>-fx-background-color: #444444;</style>
        </Separator>

        <VBox alignment="CENTER" spacing="5">
            <Label text="AVERAGE" style="-fx-text-fill: #81C784; -fx-font-size: 12px;"/>
            <Label fx:id="averageLabel" text="0"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="â—€ BACK"
                onAction="#handleBack"
                style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 45; -fx-background-radius: 25;"/>

        <Button text="ðŸ”„ REFRESH"
                onAction="#handleClearScores"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 45; -fx-background-radius: 25;"/>
    </HBox>

</VBox>